<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1>Course Management App</h1>

        <div class="app-sections">


            <!-- Delete Course -->
            <section>
                <h2>Delete Course</h2>
                <form id="deleteForm">
                    <label for="deleteCourseId">Course ID</label>
                    <input type="text" id="deleteCourseId" name="courseId" placeholder="Enter course ID" required>
                    <button type="submit">Delete Course</button>
                </form>
            </section>

            <!-- Update Course -->
            <section>
                <h2>Update Course</h2>
                <form id="updateForm">
                    <label for="updateCourseId">Course ID</label>
                    <input type="text" id="updateCourseId" name="courseId" placeholder="Enter course ID" required>
                    <label for="updateCourseName">New Course Name</label>
                    <input type="text" id="updateCourseName" name="courseName" placeholder="Enter new course name">
                    <label for="updateCourseDescription">New Course Description</label>
                    <input type="text" id="updateCourseDescription" name="courseDescription" placeholder="Enter new course description">
                    <label for="updateCourseDuration">New Course Duration (in months)</label>
                    <input type="number" id="updateCourseDuration" name="courseDuration" placeholder="Enter new course duration">
                    <button type="submit">Update Course</button>
                </form>
            </section>

            <!-- Search Course by ID -->
            <section>
                <h2>Search Course</h2>
                <form id="searchForm">
                    <label for="searchCourseId">Course ID</label>
                    <input type="text" id="searchCourseId" name="courseId" placeholder="Enter course ID" required>
                    <button type="submit">Search Course</button>
                </form>
                <div id="searchResult"></div>
            </section>
        </div>

        <!-- Show All Courses -->
        <section>
            <h2>All Courses</h2>
            <button id="showAllCourses">Show All Courses</button>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Duration (Months)</th>
                        <th>Fees</th>
                    </tr>
                </thead>
                <tbody id="coursesTableBody">
                    <!-- Courses will be dynamically added here -->
                </tbody>
            </table>
        </section>
    </div>

    <script>
        // Placeholder for JavaScript to handle form submissions and display data
    </script>
</body>
</html>